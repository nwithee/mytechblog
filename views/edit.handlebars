<article class="new-page">
    <section class="edit-form-page">
        <div class="form-heading">
            <h2>
                Edit Post
            </h2>
        </div>
        <div class="form-section">
            <form class="edit-post-form">
                <div class="post-title-section">
                    <label for="post-title">Title</label>
                    <input type="text" name="post-title" id="post-title" value="{{post.title}}" />
                </div>
                <div class="post-content">
                    <label for="post-content">Post</label>
                    <textarea class="entry-field" id="post-content" name="post-content">{{post.post_body}}</textarea>
                </div>
                <button type="submit" id = "submit">Update post</button>
                <button type="button" class="delete-post-btn" id = "delete-post-btn">Delete post</button>
            </form>
        </div>
    </section>
</article>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>