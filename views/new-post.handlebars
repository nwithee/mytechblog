
<article class="post">
    <section class="post-page">
        <div class="form1">
            <h2>New Blog Post</h2>
        </div>
        <div class="form2">
            <form class="post-page">
                <div class="post-title">
                    <label for="post-title">Title</label>
                    <textarea class="entry-field" id="post-title" name="post-title"></textarea>
                </div>
                <div class="post-content">
                    <label for="post-content">Post</label>
                    <textarea class="entry-field" id="post-content" name="post-content"></textarea>
                </div>
                <button type="submit" class="btn-post">Submit</button>
            </form>
        </div>
    </section>
</article>

